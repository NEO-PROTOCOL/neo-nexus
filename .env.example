# Server Configuration
PORT=3000
NODE_ENV=development

# Security (HMAC Signatures)
# Generate with: openssl rand -hex 32
NEXUS_SECRET=your_generated_nexus_secret_here

# Database
# Local SQLite file path
DATABASE_URL=file:./data/nexus.db

# Node Configurations (API Keys & Base URLs)
# These settings allow Nexus to authenticate and communicate with the ecosystem.

# 1. FlowPay Sovereign
FLOWPAY_API_KEY=your_flowpay_api_key_here
FLOWPAY_API_URL=https://pay.flowoff.xyz
FLOWPAY_WEBHOOK_SECRET=your_flowpay_webhook_secret_here

# 2. NEO Smart Factory
FACTORY_API_KEY=your_factory_api_key_here
FACTORY_API_URL=https://smart.neoprotocol.space

# 3. Neobot Core (FlowCloser)
NEOBOT_API_KEY=your_neobot_api_key_here
NEOBOT_API_URL=https://core.neoprotocol.space

# 4. Fluxx DAO
FLUXX_API_KEY=your_fluxx_api_key_here
FLUXX_API_URL=https://fluxx.neoprotocol.space

# 5. NEO FlowOFF Agency
FLOWOFF_API_KEY=your_flowoff_api_key_here
FLOWOFF_API_URL=https://flowoff.xyz

# 6. WOD [X] PRO
WOD_API_KEY=your_wod_api_key_here
WOD_API_URL=https://app.wodx.pro

# 7. NEO Agent Node
AGENT_NODE_API_KEY=your_agent_node_api_key_here
AGENT_NODE_API_URL=https://agent-node.neoprotocol.space

# 8. NEO Protocol Core
PROTOCOL_API_KEY=your_protocol_api_key_here
PROTOCOL_API_URL=https://neoprotocol.space
